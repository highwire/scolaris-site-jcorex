{% spaceless %}	
	{% if organisms_only %}
		<div class="container">
	{% endif %}
		{% include "@atoms/text/_heading.twig" with {
			heading: cardlinkHead.heading
		} only %}
		<div class="row {{ card_row_class }}">
			{% for item in card_link_items %}
				<div class="col-12 {{ item.colwidth }}">
					<a title="{{ item.title }}" href="{{ item.href }}" class="{{ item.class }}">
						{% if item.card_link_top|default(true) %}
							{% if item.image %}
								<picture>
									{% if item.source_media %}
										{% for i in item.source_media %}
											<source media="{{ i.img_media }}" srcset="{{ i.img_srcset }}">
										{% endfor %}
									{% endif %}
									{% include "@atoms/images/_image.twig" with {
										image: item.image
									} only %}
								</picture>
							{% endif %}
							<div class="img-overlay {{ item.overlay_position }}">
								{% if item.heading %}
									{% include "@atoms/text/_heading.twig" with {
										heading: item.heading
									} only %}
								{% endif %}
							</div>
						{% endif %}
					</a>
				</div>
			{% endfor %}
		</div>
	{% if organisms_only %}
		</div>
	{% endif %}
{% endspaceless %}