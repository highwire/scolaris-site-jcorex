<header class="header">
	<div class="container">
		<div class="header__brand">
			{{ header_branding_1 }}	
		</div>
		<div class="header__brand">
			{{ header_branding_2 }}
		</div>
		<button class="header__toggle" type="button" data-bs-toggle="collapse" data-bs-target="#navbarHeader">
			<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="bi" fill="currentColor" viewBox="0 0 16 16">
				<path fill-rule="evenodd" d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"></path>
			</svg>
		</button>
	</div>
	<nav class="navigation">
		<div class="container">				
			<div class="navigation__collapse" id="navbarHeader">
				{{ header_nav }}
				{{ header_auth }}
			</div>
		</div>
	</nav>
</header>

{% if show_banner|default(false) %}
	{% include "@components/banner/_banner.twig" %}	
{% endif %}

{% if show_search|default(false) %}
    {{search_form}}
{% endif %}

