{% if organisms_only %}
		<div class="container">
	{% endif %}
	<div class="slider {{ card_slider_class }}">
		{% for item in card_link_items %}
			<div class="slick-slide">
				<a title="{{ item.title }}" href="{{ item.href }}" class="{{ item.class }}">
					{% if item.image %}
						<picture>
							{% if item.source_media %}
								{% for i in item.source_media %}
									<source media="{{ i.img_media }}" srcset="{{ i.img_srcset }}">
								{% endfor %}
							{% endif %}
							{% include "@atoms/images/_image.twig" with {
								image: item.image
							} only %}
						</picture>
					{% endif %}
					<div class="card-body {{ item.body }}">
						{% if item.heading %}
							{% include "@atoms/text/_heading.twig" with {
								heading: item.heading
							} %}
						{% endif %}
						{% if item.paragraph %}
							{% include "@atoms/text/_paragraph.twig" with {
								paragraph: item.paragraph
							} %}
						{% endif %}
					</div>
				</a>
			</div>
		{% endfor %}
	</div>
{% if organisms_only %}
	</div>
{% endif %}