{% if offcanvas.targetid %}
	<button type="button" class="btn btn-primary" data-bs-toggle="offcanvas" data-bs-target="#{{offcanvas.targetid}}">Open Offcanvas</button>
{% endif %}

<div class="offcanvas offcanvas-{{offcanvas.position}}" tabindex="-1" id="{{ offcanvas.targetid }}">
	<div class="offcanvas-header">
		{% if offcanvas.head %}
			<h5 class="offcanvas-title">{{offcanvas.head}}</h5>			
		{% endif %}
		<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
	</div>
	<div class="offcanvas-body">
		{% if offcanvas.body %}
			{{offcanvas.body}}
		{% endif %}
	</div>
</div>
