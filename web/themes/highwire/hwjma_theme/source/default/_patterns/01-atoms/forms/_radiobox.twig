{% set index =  radiobox.index ? radiobox.index : loop.index %}

<div class="form-check {{radiobox.formclass}}">
  <input class="form-check-input" type="radio" name="{{ radiobox.name }}" id="radiobox-{{ radiobox.index }}">
  <label class="form-check-label d-block" for="radiobox-{{ radiobox.index }}">
	{% if icon.suffix %}
		<i class="{{ icon.prefix }}-{{ icon.suffix }}"></i>
	{% endif %}
    {{ radiobox.label }}
	{% if radiobox.count %}
		<span class="badge bg-{{ radiobox.color }} ms-2">{{ radiobox.count }}</span>
	{% endif %}
  </label>
</div>
