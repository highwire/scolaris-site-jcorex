		} only %}
	{% endfor %}
{% endif %}#}

{% if card_link %}
	{% for elem in card_link %}
		{% include "@atoms/button/_anchor-link.twig" with {
			href: elem.href,
			class: elem.class,
			text: elem.text
		} only %}
	{% endfor %}
{% endif %}

{% if card_download_pdf %}
  {{ card_download_pdf }}
{% endif %}

{% if card_toggle %}
	<div class="show-content-toggle">
		{{ card_toggle }}
	</div>
{% endif %}
