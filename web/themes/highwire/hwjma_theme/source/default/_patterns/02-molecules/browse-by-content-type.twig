<div class="periodical-highlight">
{% macro menu_links(items, attributes, menu_level, classes, menu_bottom) %}
{% spaceless %}
  {% if items %}
    <ul>
    {% for item in items %}
      <li{{ item.attributes|without('class') }} class="{{ item.attributes.class }} {{ item_classes|join(' ') }}">
        {{ link(item.title, item.url) }}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
{% endspaceless %}
{% endmacro %}

{#
  Invoke the custom macro defined above. If classes were provided, use them.
  This allows the template to be extended without having to also duplicate the
  code above. @see http://twig.sensiolabs.org/doc/tags/macro.html
#}
{{ _self.menu_links(items, attributes, 0, classes ? classes : ['menu', 'menu--' ~ menu_name|clean_class, 'navigation__item']) }} 
</div>